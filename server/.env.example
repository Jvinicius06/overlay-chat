# Server Configuration
PORT=3000
NODE_ENV=development
LOG_LEVEL=info

# Twitch Configuration (Anonymous mode - no token needed for read-only)
# Add channels to monitor (comma-separated)
TWITCH_CHANNELS=gaules,alanzoka,loud_coringa

# Message Buffer
MAX_BUFFER_SIZE=1000
MESSAGE_TTL_MS=600000

# SSE Configuration
SSE_HEARTBEAT_INTERVAL=15000
SSE_RETRY_MS=3000

# Security (optional for proprietary use)
# API_KEY=your-secret-key-here
# CORS_ORIGIN=http://localhost:5173
